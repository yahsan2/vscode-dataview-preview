{
  "name": "vscode-dataview-preview",
  "displayName": "Dataview Preview",
  "description": "Renders Dataview DQL queries and DataviewJS code blocks in VSCode markdown preview",
  "version": "0.0.2",
  "icon": "images/icon.png",
  "publisher": "yahsan2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yahsan2/vscode-dataview-preview.git"
  },
  "homepage": "https://github.com/yahsan2/vscode-dataview-preview#readme",
  "bugs": {
    "url": "https://github.com/yahsan2/vscode-dataview-preview/issues"
  },
  "keywords": [
    "dataview",
    "dql",
    "obsidian",
    "markdown",
    "query",
    "table",
    "list",
    "preview",
    "frontmatter"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:dataview.reindex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.previewScripts": [
      "./dist/preview.js"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "DataviewJS Preview",
      "properties": {
        "dataviewjs-preview.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable DataviewJS rendering in Markdown preview."
        }
      }
    },
    "commands": [
      {
        "command": "dataview.reindex",
        "title": "Dataview: Re-index and Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2"
  }
}
